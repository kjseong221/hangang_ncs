                                android:layout_height="16dp"
                                android:src="@drawable/rate"></ImageView>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/rate"></ImageView>

                        </LinearLayout>

