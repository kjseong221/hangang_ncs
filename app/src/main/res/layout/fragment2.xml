                                <ImageView
                                    android:layout_width="180dp"
                                    android:layout_height="90dp"
                                    android:layout_alignParentRight="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/picnic_ssuny"></ImageView>

                            </RelativeLayout>


                        </LinearLayout>

